<div class="row">
  <div class="panel panel-default col-md-4 col-md-offset-4">
    <div class="panel-body">
      <h2 class="text-center">Forgot your password?</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class: "form") do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
          <%= f.email_field :email, class: "form-control", placeholder: "Email", autofocus: true %>
        </div>

        <div class="actions text-center">
          <%= f.submit "Send me reset password instructions", class: "btn btn-success" %>
        </div>
      <% end %>

      <div class="text-center" style="margin-top: 15px; margin-bottom: 15px;">
        <p><i>- OR -</i></p>
      </div>

      <div class="actions text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
